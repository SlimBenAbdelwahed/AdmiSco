{% extends 'AdmiScoBundle::standard_layout.html.twig'%}

{% block form -%}
    <h1>Matiere</h1>

    <table class="table table-striped"data-cache="false" data-height="299">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nommatiere</th>
                <td>{{ entity.nomMatiere }}</td>
            </tr>
            <tr>
                <th>Typematiere</th>
                <td>{{ entity.typeMatiere }}</td>
            </tr>
            <tr>
                <th>Coefficient</th>
                <td>{{ entity.coefficient }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ entity.duree|date(' H:i:s') }}</td>
            </tr>
            <tr>
                <th>Enseignant</th>
              <td>{{ entity.idEnseignant }}</td>
               </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('matiere') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('matiere_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
